{{!-- Survey --}}
<div class="container">
  {{#if matched}}
  <!-- Modal -->
  <div id="mySimpleModal" class="myModal">
    <div class="my-modal-content">
      <div class="my-modal-header">
        <span class="myCloseBtn">&times;</span>
        <h3 class="text-center">Your best match is:</h3>
      </div>
      <div class="my-modal-body">
        <h2 class="text-center mb-3">{{match.name}}</h2>
        <img class="avatar" src="{{match.review}}" alt="">
      </div>
    </div>
  </div>
  {{/if}}
  <h2 class="survey mt-3 pb-3">Survey Questions</h2>
  {{#if error}}
  <div class="alert">{{error}}</div>
  {{/if}}
  <h3 class="mt-3">About You</h3>


    <!--   login page -->

    <div class="bg-img signIn">
        <div class="color-overlay"></div>

        <section class="form-elegant">

            <!--Form without header-->
            <div class="card">

                <div class="card-body mx-2">

                    <!--Header-->
                    <div class="text-center">
                        <h3 class="dark-grey-text mb-5">
                            <strong>Sign in</strong>
                        </h3>
                    </div>

                    <!--Body-->
                    <div class="md-form">
                        <input type="text" id="name" class="form-control" placeholder="Name">
                    </div>


                 
                    <div class="md-form pb-3">
                        <input type="password" id="password" class="form-control" placeholder="Password">
                       <!-- <p class="font-small blue-text d-flex justify-content-end">Forgot
                            <a href="#" class="blue-text ml-1"> Password?</a> -->
                        </p>
                    </div>

                  

    <button type="submit" id="submit" class="btn btn-lg btn-primary btn-block mb-4"><i class="fa fa-check-circle mr-2" aria-hidden="true"></i>Submit</button>

